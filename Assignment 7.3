#include <stdio.h>

//Compiler version gcc  6.3.0

int main()
{
  int n;

  printf("Enter a number=%d\n");
  scanf("%d", &n);
  int reverse=0, remainder;
  while(n!=0)
  {
    
  
  remainder=n%10;
  reverse=reverse*10+remainder;
  n=n/10;
  }

  printf("Reverse of the number = %d\n", reverse);
  scanf("%d", &reverse);
  return 0;
}
